---
interface Props {
	title: string;
}

const { title } = Astro.props;
import { ViewTransitions } from 'astro:transitions';
import Footer from '../components/Footer.astro';
import NavBar from '../components/Navbar';
---


<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="stylesheet" href="https://use.typekit.net/gsc4pfd.css">
		<link rel="stylesheet" href="https://use.typekit.net/gsc4pfd.css">
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body >
		<NavBar transition:persist client:visible />
		<slot />
        <Footer />
	</body>
</html>

<style is:global>
	body {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
		cursor: url('/cursor.png'), auto;
	}

	@font-face {
		font-family: 'TimesNow';
		src: url('/fonts/TimesNow-SemiLight.woff2.ttf');
	}

	@font-face {
		font-family: 'NimbusSans';
		src: url('/fonts/NimbusSans-Regular.otf');
	}

	@font-face {
		font-family: 'Freight';
		src: url('/fonts/FreightDispLight.otf');
	}





</style>