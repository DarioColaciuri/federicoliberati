---
interface Props {
	title: string;
}

const { title } = Astro.props;
import { ViewTransitions } from 'astro:transitions';
import Footer from '../components/Footer.astro';
import NavBar from '../components/Navbar';
---


<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="I’m an Argentinian architect based in Buenos Aires & Barcelona. I’ve
		started my solo practice in 2017, having worked in association with
		other professionals throughout the years. I specialize on commercial &
		gastronomic architecture aswell on private housing & refurbishments." />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/logo.svg" />
		<meta property="twitter:image" content="https://firebasestorage.googleapis.com/v0/b/auditroim.appspot.com/o/logoindex.png?alt=media&token=4eb950ed-cb47-46f4-af86-40daa699af55">
		<meta property="twitter:card" content="https://firebasestorage.googleapis.com/v0/b/auditroim.appspot.com/o/logoindex.png?alt=media&token=4eb950ed-cb47-46f4-af86-40daa699af55">
		<meta property="twitter:title" content="Federico Liberati">
		<meta property="twitter:description" content="Im an Argentinian architect based in Buenos Aires & Barcelona.">
		<meta property="og:image" content="https://firebasestorage.googleapis.com/v0/b/auditroim.appspot.com/o/logoindex.png?alt=media&token=4eb950ed-cb47-46f4-af86-40daa699af55">
		<meta property="og:title" content="Federico Liberati">
		<meta property="og:description" content="Im an Argentinian architect based in Buenos Aires & Barcelona." />
		<meta property="og:url" content="https://federicoliberati.vercel.app/">
		<meta name="keywords" content="federico liberati, architect, argentina, españa, barcelona, madrid, arquitecto, diseño, furnitue, design, arquitectura, buenos aires"/>
		<meta name="robots" content="follow"/>
		<meta name="generator" content={Astro.generator} />
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body >
		<NavBar transition:persist client:visible />
		<slot />
        <Footer />
	</body>
</html>

<style is:global>
	body {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
		cursor: url('/cursor.png'), auto;
	}

	@font-face {
		font-family: 'TimesNow';
		src: url('/fonts/TimesNow-SemiLight.woff2.ttf');
	}

	@font-face {
		font-family: 'NimbusSans';
		src: url('/fonts/NimbusSans-Regular.otf');
	}

	@font-face {
		font-family: 'Freight';
		src: url('/fonts/FreightDispLight.otf');
	}





</style>