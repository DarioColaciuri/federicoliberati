---
import NavFoot from '../layouts/NavFoot.astro';
import projects from "../utils/projects.json"
---

<NavFoot title="Federico-Liberati">
    <div class="columns">
        <div class="column">
            {projects.map((project, index) => (
                index % 2 === 0 && (
                    <a href={`/projects/${project.index}`} class="image-link">
                        <div class="image-container">
                            <img class="foto" src={`/${project.thumbnail[0]}`} alt={`${project.title}`} />
                            <div class="overlay">
                                <div class="text-container">
                                    <h2 class="text">{project.index} “—” {project.title} “—” {project.year}</h2>
                                    <p class="text2">{project.type}</p>
                                    <p class="text2">{project.status}</p>
                                </div>
                            </div>
                        </div>
                    </a>
                )
            ))}
        </div>
        <div class="column">
            {projects.map((project, index) => (
                index % 2 !== 0 && (
                    <a href={`/projects/${project.index}`} class="image-link">
                        <div class="image-container">
                            <img class="foto" src={`/${project.thumbnail[0]}`} alt={`${project.title}`} />
                            <div class="overlay">
                                <div class="text-container">
                                    <h2 class="text">{project.index} “—” {project.title} “—” {project.year}</h2>
                                    <p class="text2">{project.type}</p>
                                    <p class="text2">{project.status}</p>
                                </div>
                            </div>
                        </div>
                    </a>
                )
            ))}
        </div>
    </div>
</NavFoot>

<style>
    h1 {
        text-align: center;
    }

    .columns {
        display: flex;
        gap: 1rem;
    }

    .column {
        flex: 1;
        display: flex;
        flex-direction: column;
        gap: .5rem;
    }

    .foto {
        width: 100%;
        height: auto;
        position: relative;
        border-radius: 1rem;
    }

    .image-container {
        position: relative;
        overflow: hidden;
    }

    .overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        backdrop-filter: blur(3px); 
        -webkit-backdrop-filter: blur(3px);
        opacity: 0;
        transition: opacity 0.3s ease;
        border-radius: 1rem;
        font-family: NimbusSans;
    }

    .text-container {
        text-align: center;
        padding: 1rem;
        border-radius: 1rem;
        background-color: rgba(0, 0, 0, 0.055);
        line-height: 1rem;
    }

    .image-link:hover .overlay {
        opacity: 1;
    }

    .text {
        color: black;
        font-size: 24px;
        font-weight: bold;
    }

    .text2 {
        color: black;
        font-size: 20px;
        font-family: TimesNow;
    }
</style>