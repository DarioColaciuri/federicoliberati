---
import IndexList from "../../components/IndexList";
import NavFoot from "../../layouts/NavFoot.astro";
import SubmenuLayout from "../../layouts/SubmenuLayout.astro";
import Arrow from "../../components/svg/Arrow"
---

<NavFoot title="Federico-Liberati">
  <div class="title-container">
    <h1 class="title">INDEX,</h1>
    <a class="arrow" href="#project"><Arrow /> </a>
    </div>
  <div class="containergral">
  <SubmenuLayout />
</div>
<IndexList transition:persist client:only="react" />
</NavFoot>

<style>
  .containergral {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  html {
    scroll-behavior: smooth;
  }

  .title {
  text-align: start;
  margin-left: 1rem;
  font-family: NimbusSans;
  font-weight: 100;
  font-size: 3rem;
  }

  .title-container {
    display: flex;
    flex-direction: column;
    height: 90vh;
    justify-content: end;
  }

  .arrow {
    display: flex;
    justify-content: center;
    margin-top: -2rem;
    margin-bottom: 5rem;
  }

</style>
