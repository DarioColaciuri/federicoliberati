---
import NavFoot from "../../layouts/NavFoot.astro";
import SubmenuLayout from "../../layouts/SubmenuLayout.astro";
import process from "../../utils/process.json"
import Arrow from "../../components/svg/Arrow"
---

<NavFoot title="Federico-Liberati">
  <div class="title-container">
    <h1 class="title">PROCESS,</h1>
    <a class="arrow" href="#project"><Arrow /> </a>
    </div>
  <main class="container">
    <SubmenuLayout />
    <div id="project" class="columns">
      <div class="column">
        {
          process
            .filter(
              (process, index) => process.class === "process" && index % 2 === 0
            )
            .map((process, index) => (
                <div class="image-container">
                  <img
                    class="foto"
                    src={`/${process.thumbnail[0]}`}
                    alt={`${process.title}`}
                  />
                </div>
            ))
        }
      </div>
      <div class="column">
        {
          process
            .filter(
              (process, index) => process.class === "process" && index % 2 !== 0
            )
            .map((process, index) => (
                <div class="image-container">
                  <img
                    class="foto"
                    src={`/${process.thumbnail[0]}`}
                    alt={`${process.title}`}
                  />
                </div>
            ))
        }
      </div>
    </div>
  </main>
</NavFoot>

<style>
  h1 {
    text-align: center;
  }

  html {
    scroll-behavior: smooth;
  }

  .title {
  text-align: start;
  margin-left: 1rem;
  font-family: NimbusSans;
  font-weight: 100;
  font-size: 3rem;
  }

  .title-container {
    display: flex;
    flex-direction: column;
    height: 90vh;
    justify-content: end;
  }

  .arrow {
    display: flex;
    justify-content: center;
    margin-top: -2rem;
    margin-bottom: 5rem;
  }

  .container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  .columns {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin: 1rem;
  }

  .title {
  text-align: start;
  margin-top: 70vh;
  margin-left: 1rem;
  font-family: NimbusSans;
  font-weight: 100;
  font-size: 3rem;
  }

  .column {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .foto {
    width: 100%;
    height: auto;
    position: relative;
  }

  .image-container {
    position: relative;
    overflow: hidden;
  }

  .overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    backdrop-filter: blur(3px);
    -webkit-backdrop-filter: blur(3px);
    opacity: 0;
    transition: opacity 0.3s ease;
    font-family: NimbusSans;
  }

  .text-container {
    text-align: center;
    padding: 1rem;
    border-radius: 1rem;
    line-height: 1rem;
  }

  .image-link:hover .overlay {
    opacity: 1;
  }

  .text {
    color: black;
    font-size: 24px;
    font-weight: bold;
  }

  .text2 {
    color: black;
    font-size: 20px;
    font-family: TimesNow;
  }

  .textcel {
    display: none;
  }

  @media screen and (max-width: 700px) {
    .columns {
      flex-direction: column;
      justify-content: center;
      align-content: center;
      width: 90vw;
    }
  }
</style>
